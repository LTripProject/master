
<% if @attraction && @attraction.persisted? %>
  $("#place_<%= @attraction.schedule.index %>").val('');
  $("#add-to-itinerary-form_<%= @attraction.schedule.index %>").modal('hide');
  $("#sortable_<%= @attraction.schedule_day.index %>").append(
      '<%= j(render 'schedule_detail/schedule_detail', attraction: @attraction) %>'
  );
  <%= render(:partial => 'schedules/mapapi', locals: {schedule: @schedule}, :formats => [:js] ) %>
<% end %>