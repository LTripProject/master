
<header id="masthead" class="site-header" role="banner">
  <div class="site-header-head clearfix">
    <div class="container header-user h-card">
      <% if user_signed_in? %>
        <div class="header-user-name pull-left">
          <%= link_to current_user do %>
            <span class="p-name"><%= current_user.email %> </span>
            <% if current_user.image_url %>
              <%= image_tag current_user.image_url, style: "width: 20px; height: 20px;" %>
            <% else %>
              <i class="fa fa-user"></i>
            <% end %>
          <% end %>
        </div>
         <a href="#" id="notificationLink">Notifications</a>
          <span id="notification_count"><%=  %></span>

          <div id="notificationContainer">
          <div id="notificationTitle">Notifications</div>
          <div id="notificationsBody" class="notifications">
            <%= render 'notifications/notification' %>
          </div>
          <div id="notificationFooter"><a href="#">See All</a></div>
			</div>
      <% end %>


     



    </div>
      <div class="header-tour-package pull-right">
         <div id="showRightPush" class="">
          MENU &nbsp;<i class="fa fa-bars fa-lg white"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="site-branding">
    <div class="container">
      <h1 class="site-title pull-left">
        <a href="<%= root_path %>" rel="home">
          <%= image_tag "logo.png" %>
        </a>
      </h1>
      <div class="header-search pull-right clearfix">
        <i class="fa fa-search"></i>
        <div class="search clearfix">
          <form method="get"  class="search-form" action="<%= searchs_path %>">
            <div>
              <input type="text" placeholder="Search" name="departure" class="search-text" >
              <input type="submit" class="search-submit" value="" >
            </div>
          </form>
        </div>
      </div>
      <nav class="main-nav pull-right" role="navigation">
        <div class="menu-primary-menu-container">
          <ul id="menu-primary-menu" class="main-menu">
            <li>
              <%= link_to "Home", root_path %>
            </li>
            <li class="mega-menu-nav">
              <%= link_to "Where we go", trips_path %>
            </li>
            <li>
            <%= link_to "About Us", about_home_index_path %></li>
          </ul>
        </div>
      </nav>
    </div><!-- .container -->
  </div><!-- .site-branding -->
</header><!-- .site-header -->

<nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-right" id="cbp-spmenu-s2">
	<h3>LTRIP</h3>
    <ul class="sub-menu">
        <li><%= link_to "Create trip", new_trip_path %></li>
        <li><%= link_to "Trips available", trips_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to('My Account', current_user) %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
         
        <% else %>
          <li><%= link_to('Sign in', new_user_session_path) %></li>
          <li><%= link_to('Sign up', new_user_registration_path) %></li>
        <% end %>
    </ul>
</nav>