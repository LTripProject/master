<div class="row">
  <div class="col col-md-6">
    <blockquote>
      <h4><%= @trip.title %></h4>
      <p><%= @trip.description %></p>
      <p><%= @trip.start_date %></p>
      <p><%= @trip.expected_budget %></p>
    </blockquote>
  </div>
  <div class="col col-md-6">
    <div class="container">
      <%= simple_form_for :trips, url: trips_invite_path,
        html: { autocomplete: "off" } do |f| %>
        <div class="row">
          <%= f.input :email %>
          <%= f.submit "Invite", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>