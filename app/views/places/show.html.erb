<div class="container">
<div class="one-column">
  <div class="place-basic-info">
    <h2>
      <%= @place.name %>
    </h2>
    <% if @place.rating %>
        <%
          i = @place.rating.round
          if i == 0
        %>
            No Rating
        <% else
             i.times do |x|
        %>
                <span class="rating-icon"></span>
            <%
              end
              end %>
    <% end %>
  </div>
  <div class="photo-place-detail">
    <h2 class="fs-title short-border text-center">Gallery</h2>

  <div class="map-place-detail">
  <div class="row">
    <h2 class="fs-title short-border">Maps</h2>
    </div>
    <div class="col-md-12">
      <iframe src="<%= @place.map_url %>" width="100%" height="450"
              frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
     <div class="col-md-4">
    <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=256337051548023";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="fb-comments" data-href="http://example.com" data-width="100%" data-num-posts="2"></div>
    </div>
  </div>
</div>
</div>


